@model Contact

<form method="post">
    <input asp-for="RespondId" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Check Contact Message</h2>
            <hr />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="RespondName" class="p-0"></label>
            <input asp-for="RespondName" class="form-control" readonly/>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="RespondEmail" class="p-0"></label>
            <input asp-for="RespondEmail" class="form-control" readonly/>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="RespondMeaasge" class="p-0"></label>
            <textarea asp-for="RespondMeaasge" class="form-control" readonly></textarea>
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary border form-control">
                    返回
                </a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}